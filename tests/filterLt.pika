%generate filter

Sll : layout[-x](List);
Sll Nil := emp;
Sll (Cons head tail) :=
  exists +nxt.
  x :-> head **
  (x+1) :-> nxt **
  Sll tail [nxt];

filter : Int -> Sll -> Sll;
filter n Nil := Nil [Sll];
filter n (Cons a as) | a < n := filter n as;
filter n (Cons a as) | not (a < n) := Cons a (filter n as) [Sll];

%test "filter1" Sll:
  filter 2 (Cons 1 (Cons 2 (Cons 10 (Cons 20 (Nil [Sll]) [Sll]) [Sll]) [Sll]) [Sll]);

